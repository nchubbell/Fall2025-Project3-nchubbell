@model Fall2025_Project3_nchubbell.Models.ActorMovie

@{
    ViewData["Title"] = "Delete Actor–Movie Link";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0" style="border-radius:1.25rem; overflow:hidden;">
                <div class="card-header d-flex justify-content-between align-items-center"
                     style="background-color:#b91c1c; color:#f8f9fa;">
                    <h1 class="h5 mb-0">Delete Actor–Movie Link</h1>
                    <span class="badge bg-light text-danger">Warning</span>
                </div>

                <div class="card-body">
                    <h3 class="h6 mb-3">Are you sure you want to delete this link?</h3>

                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">
                            Actor
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Actor.Name)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            Movie
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Movie.Title)
                        </dd>
                    </dl>
                </div>

                <div class="card-footer d-flex justify-content-between"
                     style="background-color:#f9fafb;">
                    <form asp-action="Delete"
                          asp-route-actorId="@Model.ActorId"
                          asp-route-movieId="@Model.MovieId"
                          class="mb-0">
                        <input type="hidden" asp-for="ActorId" />
                        <input type="hidden" asp-for="MovieId" />
                        <input type="submit"
                               value="Delete"
                               class="btn btn-danger" />
                    </form>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Cancel
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
