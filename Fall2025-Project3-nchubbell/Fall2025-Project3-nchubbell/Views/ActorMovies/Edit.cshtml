@model Fall2025_Project3_nchubbell.Models.ActorMovie

@{
    ViewData["Title"] = "Edit Actor–Movie Link";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0" style="border-radius:1.25rem; overflow:hidden;">
                <div class="card-header" style="background-color:#9E1B32; color:#f8f9fa;">
                    <h1 class="h5 mb-0">Edit Actor–Movie Link</h1>
                </div>

                <div class="card-body">
                    <form asp-action="Edit"
                          asp-route-actorId="@Model.ActorId"
                          asp-route-movieId="@Model.MovieId">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="ActorId" />
                        <input type="hidden" asp-for="MovieId" />

                        <div class="mb-3">
                            <label class="form-label">Actor</label>
                            <p class="form-control-plaintext">
                                @Model.Actor?.Name
                            </p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Movie</label>
                            <p class="form-control-plaintext">
                                @Model.Movie?.Title
                            </p>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Back to List
                            </a>
                            <input type="submit"
                                   value="Save"
                                   class="btn"
                                   style="background-color:#9E1B32; color:#f8f9fa;" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
