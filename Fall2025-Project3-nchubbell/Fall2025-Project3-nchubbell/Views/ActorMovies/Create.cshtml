@model Fall2025_Project3_nchubbell.Models.ActorMovie

@{
    ViewData["Title"] = "Create Actor–Movie Link";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0" style="border-radius:1.25rem; overflow:hidden;">
                <div class="card-header" style="background-color:#9E1B32; color:#f8f9fa;">
                    <h1 class="h5 mb-0">Create Actor–Movie Link</h1>
                </div>

                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="ActorId" class="form-label">Actor</label>
                            <select asp-for="ActorId"
                                    class="form-select"
                                    asp-items="ViewBag.ActorId">
                            </select>
                            <span asp-validation-for="ActorId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MovieId" class="form-label">Movie</label>
                            <select asp-for="MovieId"
                                    class="form-select"
                                    asp-items="ViewBag.MovieId">
                            </select>
                            <span asp-validation-for="MovieId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Back to List
                            </a>
                            <input type="submit"
                                   value="Create"
                                   class="btn"
                                   style="background-color:#9E1B32; color:#f8f9fa;" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
