@model Fall2025_Project3_nchubbell.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0" style="border-radius:1.25rem; overflow:hidden;">
                <div class="card-header d-flex justify-content-between align-items-center"
                     style="background-color:#b91c1c; color:#f8f9fa;">
                    <h1 class="h5 mb-0">Delete Actor</h1>
                    <span class="badge bg-light text-danger">Warning</span>
                </div>

                <div class="card-body">
                    <h3 class="h6 mb-3">Are you sure you want to delete this actor?</h3>

                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.Gender)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Gender)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.Age)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Age)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.ImdbUrl)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.ImdbUrl)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.Photo)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Photo)
                        </dd>
                    </dl>
                </div>

                <div class="card-footer d-flex justify-content-between"
                     style="background-color:#f9fafb;">
                    <form asp-action="Delete" class="mb-0">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Cancel
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
