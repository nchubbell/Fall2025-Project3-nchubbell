@model Fall2025_Project3_nchubbell.Models.ViewModels.ActorDetailsViewModel
@using System

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <!-- Actor info + photo -->
            <div class="card shadow-lg border-0 mb-4" style="border-radius:1.25rem; overflow:hidden;">
                <div class="card-header d-flex justify-content-between align-items-center"
                     style="background-color:#9E1B32; color:#f8f9fa;">
                    <div>
                        <h1 class="h4 mb-0">@Model.Name</h1>
                        <small class="d-block">
                            @Model.Gender
                            @if (Model.Age > 0)
                            {
                                @($" • Age {Model.Age}")
                            }
                        </small>
                    </div>

                    @if (Model.Tweets != null && Model.Tweets.Any())
                    {
                        var bgColor =
                        Model.OverallSentimentLabel == "Positive" ? "#16a34a" :
                        Model.OverallSentimentLabel == "Negative" ? "#b91c1c" :
                        "#4b5563";

                        <div class="text-end">
                            <span class="badge"
                                  style="background-color:@bgColor; color:#f8f9fa;">
                                @Model.OverallSentimentLabel
                            </span>
                            <div class="small">
                                compound: @Model.OverallCompoundSentiment.ToString("0.000")
                            </div>
                        </div>
                    }
                </div>

                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-4 text-center">
                            <h5 class="mb-3">Photo</h5>
                            @if (Model.Photo != null)
                            {
                                var base64 = Convert.ToBase64String(Model.Photo);
                                var imgSrc = $"data:image/png;base64,{base64}";
                                <img src="@imgSrc" alt="Actor photo"
                                     class="img-fluid rounded shadow-sm" />
                            }
                            else
                            {
                                <div class="border rounded p-4 text-muted small">
                                    No photo available.
                                </div>
                            }
                        </div>

                        <div class="col-md-8">
                            <h5 class="mb-3" style="color:#9E1B32;">Actor Details</h5>
                            <dl class="row mb-0">
                                <dt class="col-sm-3 text-muted">
                                    Name
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Name
                                </dd>

                                <dt class="col-sm-3 text-muted">
                                    Gender
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Gender
                                </dd>

                                <dt class="col-sm-3 text-muted">
                                    Age
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Age
                                </dd>

                                <dt class="col-sm-3 text-muted">
                                    IMDb
                                </dt>
                                <dd class="col-sm-9">
                                    @if (!string.IsNullOrEmpty(Model.ImdbUrl))
                                    {
                                        <a href="@Model.ImdbUrl"
                                           target="_blank"
                                           rel="noopener noreferrer"
                                           class="link-underline">
                                            @Model.ImdbUrl
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No IMDb link provided.</span>
                                    }
                                </dd>
                            </dl>

                            <hr />

                            <h5 class="mb-2" style="color:#9E1B32;">Movies</h5>
                            @if (Model.Movies != null && Model.Movies.Any())
                            {
                                <ul class="list-inline mb-0">
                                    @foreach (var movie in Model.Movies)
                                    {
                                        <li class="list-inline-item mb-2">
                                            <a asp-controller="Movies"
                                               asp-action="Details"
                                               asp-route-id="@movie.Id"
                                               class="badge rounded-pill"
                                               style="background-color:#F2A900; color:#1a1a1a;">
                                                @movie.Title (@movie.Year)
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No movies linked to this actor.</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between"
                     style="background-color:#f9fafb;">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        Back to List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-sm"
                       style="background-color:#9E1B32; color:#f8f9fa;">
                        Edit
                    </a>
                </div>
            </div>

            <!-- AI Tweets + Sentiment -->
            <div class="card shadow-sm border-0" style="border-radius:1.1rem;">
                <div class="card-header" style="background-color:#f3f4f6;">
                    <h3 class="h5 mb-0" style="color:#9E1B32;">
                        AI-Generated Tweets &amp; Sentiment
                    </h3>
                </div>

                <div class="card-body">
                    @if (Model.Tweets != null && Model.Tweets.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle mb-0">
                                <thead style="background-color:#f9fafb;">
                                    <tr>
                                        <th style="width: 70%;">Tweet</th>
                                        <th style="width: 30%;">Sentiment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tweet in Model.Tweets)
                                    {
                                        var bgColor =
                                        tweet.Label == "Positive" ? "#16a34a" :
                                        tweet.Label == "Negative" ? "#b91c1c" :
                                        "#4b5563";

                                        <tr>
                                            <td>
                                                @tweet.Text
                                            </td>
                                            <td>
                                                <span class="badge"
                                                      style="background-color:@bgColor; color:#f8f9fa;">
                                                    @tweet.Label
                                                </span>
                                                <div class="small text-muted">
                                                    compound: @tweet.Compound.ToString("0.000")
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No AI tweets available.</p>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
