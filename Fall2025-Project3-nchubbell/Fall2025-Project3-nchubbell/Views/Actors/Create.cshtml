@model Fall2025_Project3_nchubbell.Models.Actor

@{
    ViewData["Title"] = "Create Actor";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0" style="border-radius:1.25rem; overflow:hidden;">
                <div class="card-header" style="background-color:#9E1B32; color:#f8f9fa;">
                    <h1 class="h5 mb-0">Create Actor</h1>
                </div>

                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label"></label>
                            <input asp-for="Gender" class="form-control" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Age" class="form-label"></label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImdbUrl" class="form-label"></label>
                            <input asp-for="ImdbUrl" class="form-control" />
                            <span asp-validation-for="ImdbUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Photo" class="form-label"></label>
                            <input type="file" name="photoFile" class="form-control" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Back to List
                            </a>
                            <input type="submit"
                                   value="Create"
                                   class="btn"
                                   style="background-color:#9E1B32; color:#f8f9fa;" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
