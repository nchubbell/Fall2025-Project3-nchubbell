@model Fall2025_Project3_nchubbell.Models.ViewModels.MovieDetailsViewModel
@using System

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <!-- Movie info + poster -->
            <div class="card shadow-lg border-0 mb-4" style="border-radius:1.25rem; overflow:hidden;">
                <div class="card-header d-flex justify-content-between align-items-center"
                     style="background-color:#9E1B32; color:#f8f9fa;">
                    <div>
                        <h1 class="h4 mb-0">@Model.Title</h1>
                        <small class="d-block">
                            @Model.Genre
                            @if (Model.Year != 0)
                            {
                                @($" • {Model.Year}")
                            }
                        </small>
                    </div>

                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        var overallClass =
                        Model.OverallSentimentLabel == "Positive" ? "badge" :
                        Model.OverallSentimentLabel == "Negative" ? "badge" :
                        "badge";

                        var bgColor =
                        Model.OverallSentimentLabel == "Positive" ? "#16a34a" :     // green
                        Model.OverallSentimentLabel == "Negative" ? "#b91c1c" :     // dark red
                        "#4b5563";                                                   // gray

                        <div class="text-end">
                            <span class="@overallClass"
                                  style="background-color:@bgColor; color:#f8f9fa;">
                                @Model.OverallSentimentLabel
                            </span>
                            <div class="small">
                                compound: @Model.OverallCompoundSentiment.ToString("0.000")
                            </div>
                        </div>
                    }
                </div>

                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-4 text-center">
                            <h5 class="mb-3">Poster</h5>
                            @if (Model.Poster != null)
                            {
                                var base64 = Convert.ToBase64String(Model.Poster);
                                var imgSrc = $"data:image/png;base64,{base64}";
                                <img src="@imgSrc" alt="Movie poster"
                                     class="img-fluid rounded shadow-sm" />
                            }
                            else
                            {
                                <div class="border rounded p-4 text-muted small">
                                    No poster available.
                                </div>
                            }
                        </div>

                        <div class="col-md-8">
                            <h5 class="mb-3" style="color:#9E1B32;">Movie Details</h5>
                            <dl class="row mb-0">
                                <dt class="col-sm-3 text-muted">
                                    Title
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Title
                                </dd>

                                <dt class="col-sm-3 text-muted">
                                    Genre
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Genre
                                </dd>

                                <dt class="col-sm-3 text-muted">
                                    Year
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Year
                                </dd>

                                <dt class="col-sm-3 text-muted">
                                    IMDb
                                </dt>
                                <dd class="col-sm-9">
                                    @if (!string.IsNullOrEmpty(Model.ImdbUrl))
                                    {
                                        <a href="@Model.ImdbUrl"
                                           target="_blank"
                                           rel="noopener noreferrer"
                                           class="link-underline">
                                            @Model.ImdbUrl
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No IMDb link provided.</span>
                                    }
                                </dd>
                            </dl>

                            <hr />

                            <h5 class="mb-2" style="color:#9E1B32;">Cast</h5>
                            @if (Model.Actors != null && Model.Actors.Any())
                            {
                                <ul class="list-inline mb-0">
                                    @foreach (var actor in Model.Actors)
                                    {
                                        <li class="list-inline-item mb-2">
                                            <a asp-controller="Actors"
                                               asp-action="Details"
                                               asp-route-id="@actor.Id"
                                               class="badge rounded-pill"
                                               style="background-color:#F2A900; color:#1a1a1a;">
                                                @actor.Name
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No actors linked to this movie.</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between"
                     style="background-color:#f9fafb;">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        Back to List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-sm"
                       style="background-color:#9E1B32; color:#f8f9fa;">
                        Edit
                    </a>
                </div>
            </div>

            <!-- AI Reviews + Sentiment -->
            <div class="card shadow-sm border-0" style="border-radius:1.1rem;">
                <div class="card-header" style="background-color:#f3f4f6;">
                    <h3 class="h5 mb-0" style="color:#9E1B32;">
                        AI-Generated Reviews &amp; Sentiment
                    </h3>
                </div>

                <div class="card-body">
                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle mb-0">
                                <thead style="background-color:#f9fafb;">
                                    <tr>
                                        <th style="width: 70%;">Review</th>
                                        <th style="width: 30%;">Sentiment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var review in Model.Reviews)
                                    {
                                        var bgColor =
                                        review.Label == "Positive" ? "#16a34a" :
                                        review.Label == "Negative" ? "#b91c1c" :
                                        "#4b5563";

                                        <tr>
                                            <td>
                                                @review.Text
                                            </td>
                                            <td>
                                                <span class="badge"
                                                      style="background-color:@bgColor; color:#f8f9fa;">
                                                    @review.Label
                                                </span>
                                                <div class="small text-muted">
                                                    compound: @review.Compound.ToString("0.000")
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No AI reviews available.</p>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
