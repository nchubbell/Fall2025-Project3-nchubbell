@{
    ViewData["Title"] = "Home";
}

<div class="bama-hero py-5 mb-4" style="
    background: radial-gradient(circle at top left, #9E1B32 0, #560013 55%, #1a1a1a 100%);
    color: #f8f9fa;">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold mb-3">
                    Crimson Tide Movie &amp; Actor Hub
                </h1>
                <p class="lead mb-4" style="color:#f9fafb;">
                    Manage your movie lineup and star-studded cast with an
                    <strong>AI-powered</strong> review system.
                    See sentiment at a glance and explore AI-generated reactions for each film and actor.
                </p>

                <div class="d-flex flex-wrap gap-2 mb-3">
                    <span class="badge rounded-pill" style="background-color:#F2A900; color:#1a1a1a;">
                        AI Reviews
                    </span>
                    <span class="badge rounded-pill" style="background-color:#f8f9fa; color:#9E1B32;">
                        Sentiment Analysis
                    </span>
                    <span class="badge rounded-pill" style="background-color:#9E1B32; color:#f8f9fa;">
                        Actor–Movie Links
                    </span>
                </div>

                <a asp-controller="Movies" asp-action="Index" class="btn btn-lg me-2"
                   style="background-color:#9E1B32; color:#f8f9fa; border:none;">
                    Browse Movies
                </a>
                <a asp-controller="Actors" asp-action="Index" class="btn btn-lg"
                   style="border:2px solid #f8f9fa; color:#f8f9fa; background:transparent;">
                    Browse Actors
                </a>
            </div>

            <div class="col-lg-5">
                <div class="shadow-lg rounded-4 p-4" style="background-color:#111827; color:#e5e7eb;">
                    <h2 class="h5 mb-3">What this site does</h2>
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex mb-2">
                            <span class="me-2">🎬</span>
                            <span>Store and manage a catalog of movies with posters and IMDb links.</span>
                        </li>
                        <li class="d-flex mb-2">
                            <span class="me-2">⭐</span>
                            <span>Track actors, photos, and link them across movies.</span>
                        </li>
                        <li class="d-flex mb-2">
                            <span class="me-2">🤖</span>
                            <span>Use Azure OpenAI to generate reviews and tweets automatically.</span>
                        </li>
                        <li class="d-flex">
                            <span class="me-2">📊</span>
                            <span>Analyze Vader sentiment and show tone using badges and colors.</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <hr class="my-5" style="border-color:#f3f4f6;" />

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0"
                     style="border-radius:1.25rem; background-color:#ffffff;">
                    <div class="card-body">
                        <h3 class="h5 card-title mb-2" style="color:#9E1B32;">Movies</h3>
                        <p class="card-text text-muted mb-3">
                            Add titles, genres, years, posters, and AI-generated reviews.
                            See each review’s sentiment and compound score.
                        </p>
                        <a asp-controller="Movies" asp-action="Index" class="btn btn-sm"
                           style="background-color:#9E1B32; color:#f8f9fa;">
                            Go to Movies
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0"
                     style="border-radius:1.25rem; background-color:#ffffff;">
                    <div class="card-body">
                        <h3 class="h5 card-title mb-2" style="color:#9E1B32;">Actors</h3>
                        <p class="card-text text-muted mb-3">
                            Manage actors with basic info, photos, IMDb links, and AI-generated tweets
                            describing their screen presence.
                        </p>
                        <a asp-controller="Actors" asp-action="Index" class="btn btn-sm"
                           style="background-color:#9E1B32; color:#f8f9fa;">
                            Go to Actors
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0"
                     style="border-radius:1.25rem; background-color:#ffffff;">
                    <div class="card-body">
                        <h3 class="h5 card-title mb-2" style="color:#9E1B32;">Actor–Movie Links</h3>
                        <p class="card-text text-muted mb-3">
                            Explore the many-to-many relationship between actors and movies and view casts
                            or filmographies in one place.
                        </p>
                        <a asp-controller="ActorMovies" asp-action="Index" class="btn btn-sm"
                           style="background-color:#9E1B32; color:#f8f9fa;">
                            View Cast Mappings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
